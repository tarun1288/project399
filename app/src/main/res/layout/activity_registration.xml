<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.LoginActivity">

        <ImageView
            android:id="@+id/register_applogo"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_110sdp"
            android:src="@drawable/slash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/et_name"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Name"
            android:textSize="19sp"
            />

        <RadioGroup
            android:id="@+id/radioSex"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

        </RadioGroup>

        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:text="Date of Birth"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_6sdp"
            />

        <EditText
            android:id="@+id/et_email"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Email"
            android:textSize="19sp"
            />

        <EditText
            android:id="@+id/et_phno"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Phone No"
            android:textSize="19sp"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/input_design"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:entries="@array/role"
            android:id="@+id/sp_role"/>


        <EditText
            android:id="@+id/et_password"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Password"
            android:textSize="19sp"
            />
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_upload"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_65sdp"
            android:layout_marginRight="@dimen/_65sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_8sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:text="Upload Profile"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_upload"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_8sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:text="Create Account"
            android:textColor="@android:color/white"
            />


    </LinearLayout>
</ScrollView>