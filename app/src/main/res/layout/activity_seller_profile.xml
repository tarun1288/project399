<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity">


        <ImageView
            android:id="@+id/iv_image_view"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/slash" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Seller Name"
            android:textSize="19sp"
            />
        <EditText
            android:id="@+id/et_email"
            android:layout_below="@+id/iv_image_view"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Email Id"
            android:textSize="19sp"
            />


        <EditText
            android:id="@+id/et_phone_no"
            android:layout_below="@+id/et_email"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:hint="Phone Number"
            android:textSize="19sp"
            />


        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_phone_no"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginRight="@dimen/_55sdp"
            android:background="@drawable/buttons"
            android:padding="@dimen/_8sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:text="EDIT PROFILE"
            android:textColor="@android:color/white"
            />


        <TextView
            android:id="@+id/tv_check_feedback"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/ic_side_aero"
            android:paddingRight="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:text="Check Feedbacks"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textSize="19sp"
            />


    </RelativeLayout>
</ScrollView>